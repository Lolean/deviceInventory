<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/devicead_iv_type"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/phone"
        />

    <EditText
        android:id="@+id/deviceadd_et_brand"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:hint="brand"
        android:textAlignment="center"
        android:textSize="30dp"

        />
    <EditText
        android:id="@+id/devicead_et_model"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:hint="model"
        android:textSize="30dp"
        android:textAlignment="center"

        />
    <EditText
        android:id="@+id/deviceadd_et_website"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:hint="website"
        android:textSize="30dp"
        android:textAlignment="center"

        />
    <EditText
        android:id="@+id/deviceadd_et_serial"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:hint="serial"
        android:textSize="30dp"
        android:textAlignment="center"

        />
    <Spinner
        android:id="@+id/deviceshow_tv_state"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="state"
        android:textSize="40dp"


        />

    <Button
        android:id="@+id/deviceshow_bt_modify"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="modify"
        android:visibility="gone"
        />


</LinearLayout>