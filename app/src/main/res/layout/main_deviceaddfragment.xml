<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/deviceadd_iv_type"
        android:background="@drawable/roundedbutton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/phone"
        />

    <EditText
        android:id="@+id/deviceadd_et_brand"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:hint="brand"
        android:textAlignment="center"
        android:textSize="30dp"

        />
    <EditText
        android:id="@+id/devicead_et_model"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:hint="model"
        android:textSize="30dp"
        android:textAlignment="center"

        />
    <EditText
        android:id="@+id/deviceadd_et_website"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:hint="website"
        android:textSize="30dp"
        android:textAlignment="center"

        />
    <EditText
        android:id="@+id/deviceadd_et_serial"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:hint="serial"
        android:textSize="30dp"
        android:textAlignment="center"

        />
    <RadioGroup
        android:id="@+id/deviceadd_rg_state"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="state"
        android:textSize="40dp">

    <RadioButton
            android:id="@+id/deviceadd_rb_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PHONE"
            android:textSize="30dp"
            android:checked="true"
            />
    <RadioButton
            android:id="@+id/deviceadd_rb_tablet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TABLET"
            android:textSize="30dp"
            android:checked="false"
            />

    </RadioGroup>



    <Button
        android:id="@+id/deviceadd_bt_add"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="add"
        android:visibility="visible"
        />


</LinearLayout>