<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/deviceshow_iv_type"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/phone"
        />

    <TextView
        android:id="@+id/deviceshow_tv_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="brand"
        android:textSize="40dp"

        />
    <TextView
        android:id="@+id/deviceshow_tv_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="model"
        android:textSize="40dp"

        />
    <TextView
        android:id="@+id/deviceshow_tv_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="website"
        android:textSize="40dp"

        />
    <TextView
        android:id="@+id/deviceshow_tv_serial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="serial"
        android:textSize="40dp"

        />
    <TextView
        android:id="@+id/deviceshow_tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="state"
        android:textSize="40dp"

        />

    <Button
        android:id="@+id/deviceshow_bt_modify"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="modify"
        android:visibility="gone"
        />


</LinearLayout>